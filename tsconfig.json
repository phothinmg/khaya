{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "resolveJsonModule":true,                               
    "allowJs": true,                                 
    "declaration": true,                              
    "declarationMap": true,                          
    "sourceMap": true,                               
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
     "strict": true,                                     
    "skipLibCheck": true,
  },
  "exclude": ["opt/**/*","node_modules/**/*","dist/**/*"],
  "include": ["src/**/*"]
}
